<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FISHERMAN_BILLING.A_A_C_B_reduction_detail">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label Text="REDUCTION" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalOptions="Start" TextColor="Black" FontSize="Title" HorizontalTextAlignment="Start" Margin="0,10,0,10"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Button Text="WORKER"   Clicked="Button_Clicked" Margin="10"/>
            <Button Text="DIESEL" Clicked="Button_Clicked_2" Margin="10"/>
            <Button Text="OTHER REDUCTION" Clicked="Button_Clicked_1" Margin="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>